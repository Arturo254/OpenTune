<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    android:background="@drawable/glass_background"
    android:elevation="10dp"
    android:padding="@dimen/widget_padding">

    <!-- Logo OpenTune -->
    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.8"
        android:contentDescription="OpenTune"
        android:src="@drawable/opentune" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Album Art -->
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_image_bg"
            android:clipToOutline="true"
            android:contentDescription="@string/albums"
            android:scaleType="centerCrop"
            android:src="@drawable/music_note" />

        <!-- Información de la canción -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/song_title"
                android:textColor="@color/white_30"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/artist_name"
                android:textColor="@color/white_30"
                android:textSize="12sp"
                android:alpha="0.8" />

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/widget_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/white_30"
                    android:textSize="10sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:id="@+id/widget_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:progress="0"
                    android:progressTint="@color/light_blue_50"
                    android:progressBackgroundTint="@color/white_30"
                    android:alpha="0.3" />

                <TextView
                    android:id="@+id/widget_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/white_30"
                    android:textSize="10sp"
                    android:alpha="0.7" />

            </LinearLayout>

        </LinearLayout>

        <!-- Controles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/widget_shuffle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/shuffle"
                    android:padding="6dp"
                    android:src="@drawable/shuffle"
                    android:tint="@color/white_30" />

                <ImageButton
                    android:id="@+id/widget_prev"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/skip_previous"
                    android:tint="@color/white_30" />

                <ImageButton
                    android:id="@+id/widget_play_pause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/play"
                    android:tint="@color/white_30" />

                <ImageButton
                    android:id="@+id/widget_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/skip_next"
                    android:tint="@color/white_30" />

                <ImageButton
                    android:id="@+id/widget_like"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/liked"
                    android:padding="6dp"
                    android:src="@drawable/favorite_border"
                    android:tint="@color/white_30" />

            </LinearLayout>

            <!-- Estado de reproducción -->
            <TextView
                android:id="@+id/widget_playback_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/light_blue_50"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>